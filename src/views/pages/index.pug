  main.main.index
    .index__first-screen
      h1.index-title_hovered Themis - ведущая юридическая фирма, специализирующаяся на комплексной защите бизнеса
      p.index-title #[span.name Themis] #[span.line] #[span.text ведущая юридическая фирма, специализирующаяся на комплексной защите бизнеса]
      .first-screen__contacts
        .phone
          a(href="tel:+88005553535") 8 800 555-35-35
        .email
          a(href="mailto:themis@mail.ru") themis@mail.ru
      .first-screen__slider.swiper-container
        .first-screen__slider-wrapper.swiper-wrapper
          each slide in first_screen_slider
            .first-screen__slider-slide.swiper-slide
              .first-screen__content.content
                .first-screen__description
                  p= slide.description
                  +moreBtn("#", "Больше о нас")
    
    .index__services.content
      .services__header
        +blockTitle("01", "Ведущие практики", "services__title")
        +moreBtn("#", "Все практики")
      ul.services__items
        each service in index_services
          li.services__item
            a(href=service.url)
              .services__item-img
                img.svg(src=service.img, alt=service.title)
              h4.services__item-title=service.title
              p.services__item-description= service.description

    .index__trust-us.content
      .trust-us__header
        +blockTitle("02", "Нам доверяют", "trust-us__title")
        .trust-us__slider-navigation
          .trust-us__slider-navigation-item.trust-us__slider-navigation-prev
            span
          .trust-us__slider-navigation-item.trust-us__slider-navigation-next
            span
      .trust-us__slider.swiper-container
        .trust-us__slider-wrapper.swiper-wrapper
          each element in index_trust_us
            .trust-us__slider-slide.swiper-slide
              img(src=element.url, alt=element.alt)

block footer
  include ../partials/_footer.pug
